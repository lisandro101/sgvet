<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="radiadoresPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>sgvet.entidades.Componente</class>
    <class>sgvet.entidades.Demanda</class>
    <class>sgvet.entidades.DetalleOrdenCompra</class>
    <class>sgvet.entidades.DetalleOrdenProduccion</class>
    <class>sgvet.entidades.OrdenCompra</class>
    <class>sgvet.entidades.Intermedio</class>
    <class>sgvet.entidades.ProductoComponente</class>
    <class>sgvet.entidades.Proveedor</class>
    <class>sgvet.entidades.Venta</class>
    <class>sgvet.entidades.ClaseDemanda</class>
    <class>sgvet.entidades.Politica</class>
    <class>sgvet.entidades.Configuracion</class>
    <properties>
      <property name="eclipselink.jdbc.password" value="radiadores"/>
      <property name="eclipselink.jdbc.user" value="radiadores"/>
      <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/radiadores"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
